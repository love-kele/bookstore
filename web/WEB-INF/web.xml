<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--注册-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--登陆-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--查看所有图书-->
    <servlet>
        <servlet-name>SearchBookServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.book.SearchBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchBookServlet</servlet-name>
        <url-pattern>/searchall</url-pattern>
    </servlet-mapping>

    <!--实现翻页-->
    <servlet>
        <servlet-name>ShowBookServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.book.ShowBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowBookServlet</servlet-name>
        <url-pattern>/showProductByPage</url-pattern>
    </servlet-mapping>

    <!--展示详细商品信息-->
    <servlet>
        <servlet-name>ShowInfoServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.book.ShowInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowInfoServlet</servlet-name>
        <url-pattern>/findProductById</url-pattern>
    </servlet-mapping>

    <!--添加到购物车-->
    <servlet>
        <servlet-name>AddToCarServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.AddToCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCarServlet</servlet-name>
        <url-pattern>/addCart</url-pattern>
    </servlet-mapping>

    <!--用户注销-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- 用户修改信息-->
    <servlet>
        <servlet-name>ChangeUserServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.user.ChangeUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeUserServlet</servlet-name>
        <url-pattern>/modifyuser</url-pattern>
    </servlet-mapping>
    
    <!--展示我的购物车-->
    <servlet>
        <servlet-name>ShowMyCartServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.user.ShowMyCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowMyCartServlet</servlet-name>
        <url-pattern>/showmycart</url-pattern>
    </servlet-mapping>
    
    <!--查看我的订单-->
    <servlet>
        <servlet-name>MyOrdersServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.user.MyOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyOrdersServlet</servlet-name>
        <url-pattern>/myorders</url-pattern>
    </servlet-mapping>
    
    <!--查看订单详细信息-->
 <servlet>
     <servlet-name>findOrderByIdServlet</servlet-name>
     <servlet-class>com.nefu.shop.web.servlet.findOrderByIdServlet</servlet-class>
 </servlet>
    <servlet-mapping>
        <servlet-name>findOrderByIdServlet</servlet-name>
        <url-pattern>/findOrderById</url-pattern>
    </servlet-mapping>

    <!--修改购物车-->
    <servlet>
        <servlet-name>ChangeCartServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.ChangeCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeCartServlet</servlet-name>
        <url-pattern>/changeCart</url-pattern>
    </servlet-mapping>
    
    <!--创建订单-->
    <servlet>
        <servlet-name>CreateOrderServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.CreateOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateOrderServlet</servlet-name>
        <url-pattern>/createOrder</url-pattern>
    </servlet-mapping>

    <!--根据名字模糊查询-->
    <servlet>
        <servlet-name>SearchBookByNameServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.book.SerachBookByNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchBookByNameServlet</servlet-name>
        <url-pattern>/searchByName</url-pattern>
    </servlet-mapping>

    <!--实现搜索分页-->
    <servlet>
        <servlet-name>MenuSearchSerlvet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.book.MenuSearchSerlvet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuSearchSerlvet</servlet-name>
        <url-pattern>/MenuSearchSerlvet</url-pattern>
    </servlet-mapping>
    <!--删除订单-->
    <servlet>
        <servlet-name>DelOrderByIdServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.DelOrderByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelOrderByIdServlet</servlet-name>
        <url-pattern>/delOrderById</url-pattern>
    </servlet-mapping>
    <!--展示最新商品-->
    <servlet>
        <servlet-name>ShowNewBookServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.book.ShowNewBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowNewBookServlet</servlet-name>
        <url-pattern>/shownewbook</url-pattern>
    </servlet-mapping>
    
    <!--支付订单-->
    <servlet>
        <servlet-name>PayOrderServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.PayOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayOrderServlet</servlet-name>
        <url-pattern>/pay</url-pattern>
    </servlet-mapping>
    
    <!--admin-->
    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.admin.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/listProduct</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FindOrderServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.admin.FindOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindOrderServlet</servlet-name>
        <url-pattern>/findOrders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FindOrderByManyConditionServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.admin.FindOrderByManyConditionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindOrderByManyConditionServlet</servlet-name>
        <url-pattern>/findOrderByManyCondition</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FindProductByManyConditionServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.admin.FindProductByManyConditionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindProductByManyConditionServlet</servlet-name>
        <url-pattern>/findProductByManyCondition</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.admin.AddProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DelBookServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.admin.DelBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelBookServlet</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <!--上传图片-->
    <servlet>
        <servlet-name>UpdateImageServlet</servlet-name>
        <servlet-class>com.nefu.shop.web.servlet.admin.UpdateImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateImageServlet</servlet-name>
        <url-pattern>/updateimage</url-pattern>
    </servlet-mapping>
</web-app>